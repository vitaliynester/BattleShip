<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:BattleShip.WPF.Assets.Styles">
    <!--Fonts-->
    <FontFamily x:Key="Coral Waves">pack://,,,/Assets/Fonts/#Coral waves</FontFamily>
    <!--Primary Colors-->
    <Color x:Key="BluePrimaryColor">#2568ff</Color>
    <Color x:Key="GrayPrimaryColor">#c2cde7</Color>
    <!--Primary Brushes-->
    <SolidColorBrush x:Key="BluePrimaryBrush" Color="{StaticResource BluePrimaryColor}"/>
    <SolidColorBrush x:Key="GrayPrimaryBrush" Color="{StaticResource GrayPrimaryColor}"/>
</ResourceDictionary>